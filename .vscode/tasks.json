{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "c_clang_debug",
            "group": "build",
            "type": "shell",
            "windows": {
                "command": "clang",
                "args": [
                    "${workspaceFolder}/src/*.c",

                    "-L${workspaceFolder}/lib/windows",
                    "-lUser32",
                    "-lGdi32",
                    "-lShell32",
                    "-lopengl32",

                    "-lglfw3_mt",
                    "-lglew32s",
                    "-lpixa32s",

                    "-Wall",
                    "-Wno-deprecated-declarations",

                    "-g",
                    "-O0",
                    "-DDEBUG",
                    "-I${workspaceFolder}/inc",
                    "-o${workspaceFolder}/out/windows/${workspaceFolderBasename}.exe"
                ],
            },
            "linux": {
                "command": "clang",
                "args": [
                    "${workspaceFolder}/src/*.c",
                    
                    "-L${workspaceFolder}/lib/linux",
                    "-lm",
                    "-lGL",
                    "-lpixa",
                    "-lglfw3",
                    "-lGLEW",

                    "-Wall",
                    "-Wno-deprecated-declarations",
                    
                    "-g",
                    "-O0",
                    "-DDEBUG",
                    "-I${workspaceFolder}/inc",
                    "-o${workspaceFolder}/out/linux/${workspaceFolderBasename}"
                ],
            },
            "dependsOn": [],
            "problemMatcher": [],
        },
        {
            "label": "c_clang_release",
            "group": "build",
            "type": "shell",
            "windows":{
                "command": "clang",
                "args": [
                    "${workspaceFolder}/src/*.c",

                    "-L${workspaceFolder}/lib/windows",
                    "-lUser32",
                    "-lGdi32",
                    "-lShell32",
                    "-lopengl32",
                    "-lglfw3_mt",
                    "-lglew32s",
                    "-lpixa32s",

                    "-Wall",
                    "-Wno-deprecated-declarations",

                    "-O2",
                    "-I${workspaceFolder}/inc",
                    "-o${workspaceFolder}/out/windows/${workspaceFolderBasename}.exe"
                ],
            },
            "linux":{
                "command": "clang",
                "args": [
                    "${workspaceFolder}/src/*.c",
                    
                    "-L${workspaceFolder}/lib/linux",
                    "-lm",
                    "-lGL",
                    "-lglfw3",
                    "-lGLEW",
                    "-lpixa",

                    "-Wall",
                    "-Wno-deprecated-declarations",
                    
                    "-O2",
                    "-I${workspaceFolder}/inc",
                    "-o${workspaceFolder}/out/linux/${workspaceFolderBasename}"
                ],
            },
            "dependsOn": [],
            "problemMatcher": [],
        }
    ]
}